{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "types": ["node", "jest", "supertest"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}